<?xml version="1.0" encoding="utf-8"?>
<com.bdevlin.apps.pandt.DrawerItem.NavDrawerItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:gravity="start|center_vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_height="?listPreferredItemHeight"
    app:iconTints="@drawable/navdrawer_item_icon"
    android:orientation="horizontal">

    <com.bdevlin.apps.ui.widgets.BezelImageView
        android:id="@+id/imageview2"
        android:layout_width="@dimen/navdrawer_icon"
        android:layout_height="@dimen/navdrawer_icon"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginStart="@dimen/keyline_1"
        android:scaleType="centerCrop"
        android:src="@drawable/person_image_empty"
        app:maskDrawable="@drawable/circle_mask" />

    <!--<ImageView-->
        <!--android:id="@+id/imageview2"-->
        <!--android:layout_height="@dimen/navdrawer_icon"-->
        <!--android:layout_width="@dimen/navdrawer_icon"-->
        <!--android:layout_marginEnd="@dimen/keyline_1"-->
        <!--android:layout_marginRight="@dimen/keyline_1"-->
        <!--android:layout_gravity="start|center_vertical" />-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"

            android:padding="8dp"
            android:text="New label"
            android:visibility="visible" />

        <TextView
            android:id="@+id/baseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:text="New Text" />
    </LinearLayout>
</com.bdevlin.apps.pandt.DrawerItem.NavDrawerItemView>