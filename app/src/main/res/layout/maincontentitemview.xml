<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iosched="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="10dp"
    android:layout_height="150dp"
    android:orientation="vertical">
    <!--android:layout_height="?listPreferredItemHeight"-->

    <!--android:layout_weight="1"-->
    <!--android:layout_gravity="center"-->

    <!--android:gravity="center_vertical|start"-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <com.bdevlin.apps.ui.widgets.BezelImageView
            android:id="@+id/imageview2"
            android:layout_width="@dimen/navdrawer_icon"
            android:layout_height="@dimen/navdrawer_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_1"
            android:scaleType="centerCrop"
            android:src="@drawable/person_image_empty"
            iosched:maskDrawable="@drawable/circle_mask" />
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"

            android:padding="8dp"
            android:text="New label"
            android:visibility="visible" />

        <TextView
            android:id="@+id/baseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textSize="@dimen/text_size_large"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:text="New Text" />


    </LinearLayout>
    <!--android:layout_weight="1"-->
    <!--android:layout_gravity="center"-->
    <!--android:gravity="center_vertical|start"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|italic"

            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:visibility="visible"
            android:text="New baseName"
             />
    </LinearLayout>


</LinearLayout>

</android.support.v7.widget.CardView>