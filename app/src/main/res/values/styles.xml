<resources>

    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="toolbarStyle">@style/MyToolBar</item>

        <item name="drawerArrowStyle">@style/Material.DrawerArrowStyle</item>

        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/materialize_primary</item>
        <item name="colorPrimaryDark">@color/materialize_primary_dark</item>
        <item name="colorAccent">@color/materialize_accent</item>
    </style>

    <style name="Theme" parent="FrameworkRoot.Theme">

    </style>

    <!-- Base application theme. -->
    <style name="Theme.IOSched.Base" parent="Theme">
        <item name="actionBarOverlayTopOffset">?android:actionBarSize</item>

    </style>

    <style name="Theme.IOSched" parent="Theme.IOSched.Base" />


    <!-- general styles for the tool bar -->
    <style name="MyToolBar"
        parent="@style/Widget.AppCompat.Toolbar">

        <item name="drawerArrowStyle">@style/Material.DrawerArrowStyle</item>
        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/materialize_primary</item>
        <item name="colorPrimaryDark">@color/materialize_primary_dark</item>
        <item name="colorAccent">@color/materialize_accent</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/TitleTextStyle</item>

    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle"
        parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#000040</item>

    </style>
    <!-- DrawerArrowStyles -->
    <style name="Material.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
